
<ModeRadioCheckBox@CheckBox>:
    group: 'Mode'
    size_hint_x: None
    width: 50

<ModeRadioLabel@Label>:
    text_size: self.size
    halign: 'left'
    valign: 'center'

<GroupBoxLayout@BoxLayout>:
    orientation: 'vertical'
    padding: 15, 15, 15, 15

<GroupBoxLabel@Label>:
    size_hint_y: None
    height: 20
    text_size: self.size
    halign: 'left'
    valign: 'center'
                
<GroupBoxContent@BoxLayout>:
    canvas.after:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height

<GroupBoxContentRow@BoxLayout>:
    size_hint_y: None
    height: 80
    padding: 20, 10, 20, 10

<FlashButton@Button>:
    size_hint_y: None
    height: 60

<TextWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        BoxLayout:
            size_hint_y: None
            height: 60

            Label:
                text: 'Control Mode'
                size_hint_x: None
                width: 120

            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    ModeRadioCheckBox:
                        id: RdoFlashLED
                        active: True
                        on_press: root.RdoModeOnClick()

                    ModeRadioLabel:
                        text: 'Flash LED'

                BoxLayout:
                    ModeRadioCheckBox:
                        id: RdoServoCtl
                        on_press: root.RdoModeOnClick()

                    ModeRadioLabel:
                        text: 'Servo Control'

            Switch:
                id: SwcConnection
                active: False
                size_hint_x: None
                width: 100
                on_active: root.SwcConnectionOnActive(self.active)

        BoxLayout:

            GroupBoxLayout:
                id: GrpFlashLED
                GroupBoxLabel:
                    text: 'Flash LED'

                GroupBoxContent:
                    orientation: 'vertical'

                    GroupBoxContentRow:
                        FlashButton:
                            text: '1'
                            on_press: root.BtnFlashOnClick(1)
                        FlashButton:
                            text: '2'
                            on_press: root.BtnFlashOnClick(2)
                        FlashButton:
                            text: '3'
                            on_press: root.BtnFlashOnClick(3)
                        FlashButton:
                            text: '4'
                            on_press: root.BtnFlashOnClick(4)
                        FlashButton:
                            text: '5'
                            on_press: root.BtnFlashOnClick(5)

                    GroupBoxContentRow:
                        FlashButton:
                            text: '6'
                            on_press: root.BtnFlashOnClick(6)
                        FlashButton:
                            text: '7'
                            on_press: root.BtnFlashOnClick(7)
                        FlashButton:
                            text: '8'
                            on_press: root.BtnFlashOnClick(8)
                        FlashButton:
                            text: '9'
                            on_press: root.BtnFlashOnClick(9)
                        FlashButton:
                            text: '10'
                            on_press: root.BtnFlashOnClick(10)

            GroupBoxLayout:
                id: GrpServoCtl

                GroupBoxLabel:
                    text: 'Servo Control'

                GroupBoxContent:
                    orientation: 'vertical'

                    GroupBoxContentRow:

                        Slider:
                            id: SdrServoAngle
                            max: 180
                            min: 0
                            step: 1
                            on_touch_move: root.SdrServoAngleOnTouchMove(self.value)

                        Label:
                            id: LblServoAngle
                            text: '0'
                            size_hint_x: None
                            width: 80
                            canvas.before:
                                Color:
                                    rgb: 1,1,1
                                Line:
                                    rectangle: self.x, self.y, self.width, self.height

                    GroupBoxContentRow:

                        Label:

                        Button:
                            text: 'Move'
                            size_hint_x: None
                            size_hint_y: None
                            size: 80, 60
                            on_press: root.BtnMoveServoOnClick()
