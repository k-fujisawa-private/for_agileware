<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:background="@drawable/bg_select_weekday" 
	android:orientation="vertical">

    <TextView
        android:id="@+id/lblDate"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:text="@string/default_lbl_dateB"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_below="@id/lblDate"
        android:layout_marginLeft="18dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblTimeA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_time_x100"
            android:gravity="center"
            android:text="@string/default_float_zero"
            android:textSize="9dp" />

        <TextView
            android:id="@+id/lblTimeB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_time_x125"
            android:gravity="center"
            android:text="@string/default_float_zero"
            android:textSize="9dp" />

        <TextView
            android:id="@+id/lblTimeC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_time_x135"
            android:gravity="center"
            android:text="@string/default_float_zero"
            android:textSize="9dp" />
    </LinearLayout>

</RelativeLayout>